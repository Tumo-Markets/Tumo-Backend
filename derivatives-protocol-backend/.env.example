# Application
APP_NAME="Derivatives Protocol Backend"
APP_VERSION="1.0.0"
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API
API_PORT=8124
API_PREFIX=/api/v1

# Database
# ======================
# PostgreSQL
# ======================
POSTGRES_USER=derivatives
POSTGRES_PASSWORD=derivatives_pass
POSTGRES_DB=derivatives_db
POSTGRES_PORT=5432
POSTGRES_EXPOSE_PORT=5438

# ======================
# Database URL (backend d√πng)
# ======================
DATABASE_URL=postgresql+asyncpg://derivatives:derivatives_pass@postgres:5432/derivatives_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=300

# Blockchain
RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
CHAIN_ID=1
CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
START_BLOCK=0

# Pyth Oracle
PYTH_NETWORK=mainnet
PYTH_WS_ENDPOINT=wss://hermes.pyth.network/ws
PYTH_HTTP_ENDPOINT=https://hermes.pyth.network

# Liquidation Bot
LIQUIDATION_CHECK_INTERVAL=10
LIQUIDATION_GAS_LIMIT=500000
LIQUIDATION_MAX_GAS_PRICE=100
MIN_HEALTH_FACTOR=1.0
LIQUIDATION_REWARD_RATE=0.05

# Funding Rate
FUNDING_INTERVAL=3600
FUNDING_RATE_CAP=0.001

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090


CONTRACT_SERVICE_URL="http://host.docker.internal:3001"
CONTRACT_SERVICE_API_KEY=your-super-secret-api-key-change-in-production